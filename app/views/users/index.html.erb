<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
    <% if current_user != user %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6">
        <div class="img-child"><%= profile_img(user) %></div>
        <%= link_to user_path(user) do %>
          <h4><strong><%= user.name %></strong></h4>
        <% end %>
        <div class="item">
          <%= link_to "メッセージ", conversations_path(sender_id: current_user.id, recipient_id: user.id), method:"post", class: "btn btn-default"%>
        </div>
        <%= render partial: "follow_form", locals: {user: user} if signed_in? %>
      </div>
    <% end %>
  <% end %>
</div>
